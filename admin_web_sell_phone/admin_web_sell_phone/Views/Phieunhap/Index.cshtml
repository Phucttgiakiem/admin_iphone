@model IEnumerable<PhieuNhapModel>
@functions{
    private string getDateFormat(DateTime? date)
    {
        
        var notNullDate = date ?? DateTime.Now;
        return notNullDate.ToString("dd/MM/yyyy");
    }
}
<div class="d-flex flex-row justify-content-between mb-3">
    <h2>Phiếu nhập</h2>
    <div>
        <a href="@Url.Action("Create", "Phieunhap")" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>
            Tạo phiếu nhập
        </a>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <!-- Begin Search Bar -->
        <header class="header d-flex align-items-center justify-content-between ps-0" style="box-shadow: none;">
            <div class="card-title">Danh sách phiếu nhập</div>
            <div class="search-bar" style="z-index: 0; background: none; position: inherit; visibility: visible; opacity: 1; box-shadow: none">
                <form class="search-form d-flex align-items-center"
                      method="POST"
                      action="@Url.Action("Search", "Phieunhap")">
                    <input type="text" name="query" placeholder="Search" title="Enter search keyword">
                    <button type="submit" title="Search">
                        <i class="bi bi-search"></i>
                    </button>
                </form>
            </div>
        </header><!-- End Search Bar -->
        <table class="table table-hover bg-white align-middle">
            <thead>
                <tr class="text-center">
                    <th scope="col">
                        ID
                    </th>
                    <th scope="col">
                        Nhà cung cấp
                    </th>
                    <th scope="col">
                        Ngày tạo phiếu
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                    <tr class="text-center">
                        <td scope="row">
                            @item.ID_Phieunhap
                            
                        </td>
                        <td>
                        @item.ID_nhacungcap
                        </td>
                        <td>
                        @getDateFormat(item.Ngaynhap)
                        </td>
                        <td>
                            <a class="btn btn-primary" asp-action="Detail" asp-route-id="@item.ID_Phieunhap">
                            <i class="fas fa-bars"></i> Detail
                            </a>
                        </td>
                    </tr>
            }
            </table>
     </div>
</div>